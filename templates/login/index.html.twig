{% extends 'base.html.twig' %}

{% block title %}Hello AuthController!{% endblock %}

{% block body %}
    <main class="form-signin w-25 m-auto">
        {% if error is not null %}
            <div class="card text-bg-danger mb-3">
                <div class="card-header">
                    Sign in errors
                </div>
                <div class="card-body">
                    <ul class="list-group">
                            <li class="list-group-item list-group-item-danger">
                                {{ error.getMessage() }}
                            </li>
                    </ul>
                </div>
            </div>

        {% endif %}



        <form action="/signIn" method="POST">
            <h1 class="h3 mb-3 fw-normal">Sign in</h1>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" name="_username" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <br>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

{#            <div class="form-check text-start my-3">#}
{#                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">#}
{#                <label class="form-check-label" for="flexCheckDefault">#}
{#                    Remember me#}
{#                </label>#}
{#            </div>#}
            <br/>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        </form>
    </main>
{% endblock %}
