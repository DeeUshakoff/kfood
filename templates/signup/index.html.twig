{% extends 'base.html.twig' %}

{% block title %}Hello AuthController!{% endblock %}

{% block body %}
    <main class="form-signin w-25 m-auto">
        {% if errors is defined %}
        <div class="card text-bg-danger mb-3">
            <div class="card-header">
                Sign up errors
            </div>
            <div class="card-body">

                <ul class="list-group">
                    {% for error in errors %}
                    <li class="list-group-item list-group-item-danger">
                        {{ error }}
                    </li>
                    {% endfor %}
                </ul>


            </div>
        </div>
        {% endif %}
        <form action="/signUp" method="POST">
            <h1 class="h3 mb-3 fw-normal">Sign up</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <br>
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" name="username" placeholder="Geralt of Rivia">
                <label for="floatingInput">Username</label>
            </div>
            <br>
            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <br>
            <div class="form-floating">
                <input type="password" class="form-control" name="confirmPassword" id="floatingPassword" placeholder="Confirm password">
                <label for="floatingPassword">Confirm password</label>
            </div>
            <br>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
        </form>
    </main>
{% endblock %}
