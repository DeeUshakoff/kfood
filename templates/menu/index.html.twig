{% extends 'base.html.twig' %}

{% block title %}Menu - KFood{% endblock %}

{% block body %}
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Menu</h1>
    </div>
    <ul class="nav nav-pills mb-3 justify-content-center align-content-center" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-food-tab" data-bs-toggle="pill" data-bs-target="#pills-food" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Food</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-drinks-tab" data-bs-toggle="pill" data-bs-target="#pills-drinks" type="button" role="tab" aria-controls="pills-drinks" aria-selected="false">Drinks</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-dessert" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Dessert</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-disabled-tab" data-bs-toggle="pill" data-bs-target="#pills-snacks" type="button" role="tab" aria-controls="pills-disabled" aria-selected="false">Snacks</button>
        </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-food" role="tabpanel" aria-labelledby="pills-food-tab" tabindex="0">
            <div class="container text-center">
                {% for batch in food|batch(3) %}
                    <div class="row">
                        {% for menuItem in batch %}
                            <div class="col">
                                <div class="card" style="width: 18rem;">
                                    <h5 class="card-header">{{ menuItem.product.name }}</h5>
                                    <a href="/product/{{ menuItem.product.getId() }}">
                                        <img src="{{ menuItem.imagePath }}" class="card-img-top" alt="...">
                                    </a>
                                    <div class="card-header">
                                        {% for tag in menuItem.tags %}
                                            <span class="badge text-bg-secondary">{{ tag.getName() }}</span>
                                        {% endfor %}
                                    </div>
                                    <div class="card-body">
                                        <a href="#" class="btn btn-primary">{{ menuItem.product.price }} ₽</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="pills-drinks" role="tabpanel" aria-labelledby="pills-drinks-tab" tabindex="0">
            <div class="tab-pane fade show active" id="pills-food" role="tabpanel" aria-labelledby="pills-food-tab" tabindex="0">
                <div class="container text-center">
                    {% for batch in drinks|batch(3) %}
                        <div class="row">
                            {% for menuItem in batch %}
                                <div class="col">
                                    <div class="card" style="width: 18rem;">
                                        <a href="/product/{{ menuItem.product.getId() }}">
                                            <img src="{{ menuItem.imagePath }}" class="card-img-top" alt="...">

                                        </a>
                                        <div class="card-header">
                                            {% for tag in menuItem.tags %}
                                                <span class="badge text-bg-secondary">{{ tag.getName() }}</span>
                                            {% endfor %}
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ menuItem.product.name }}</h5>


                                            <a href="#" class="btn btn-primary">{{ menuItem.product.price }} ₽</a>

                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-dessert-tab" tabindex="0">...</div>
        <div class="tab-pane fade" id="pills-disabled" role="tabpanel" aria-labelledby="pills-disabled-tab" tabindex="0">...</div>
    </div>



{% endblock %}
